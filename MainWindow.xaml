<Window x:Class="inf04zad2czerwiec2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inf04zad2czerwiec2025"
        mc:Ignorable="d"
        Title = "Szyfrowanie. Wykonane przez Kacper Dondzik"
        Height = "450" Width = "800"
        Background = "#5F9EA0" >



    <Grid Margin = "20" >
        <TextBlock Text="Podaj wartość klucza"
               Foreground="#FAEBD7"
               FontSize="16"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>



        <TextBox x:Name = "txtKlucz"
                 Width = "60"
                 Height = "25"
                 Margin = "10,40,0,0"
                 HorizontalAlignment = "Left"
                 VerticalAlignment = "Top" />

        <TextBlock Text = "Podaj tekst"
           Foreground = "#FAEBD7"
           FontSize = "16"
           Margin = "10,85,0,0"
           HorizontalAlignment = "Left"
           VerticalAlignment = "Top" />

        <TextBox x:Name = "txtTekst"
         Width = "300"
         Height = "250"
         Margin = "10,115,0,0"
         HorizontalAlignment = "Left"
         VerticalAlignment = "Top"
         TextWrapping = "Wrap"
         AcceptsReturn = "True" />


        <TextBlock Text = "Tekst zaszyfrowany"
                   Foreground = "#FAEBD7"
                   FontSize = "16"
                   Margin = "450,10,0,0"
                   HorizontalAlignment = "Left"
                   VerticalAlignment = "Top" />

        <Border BorderBrush = "#FAEBD7"
                BorderThickness = "3"
                CornerRadius = "15"
                Margin = "450,40,0,0"
                Width = "300"
                Height = "270"
                HorizontalAlignment = "Left"
                VerticalAlignment = "Top" >

            <TextBox x:Name = "txtWynik"
                     Background = "#5F9EA0"
                     Foreground = "#F0F8FF"
                     BorderThickness = "0"
                     Margin = "10"
                     TextWrapping = "Wrap"
                     AcceptsReturn = "True"
                     IsReadOnly = "True" />
        </Border >

        <Button x:Name = "btnZapis"
                Content = "Zapisz szyfr w pliku"
                Width = "150"
                Height = "35"
                Margin = "520,340,0,0"
                HorizontalAlignment = "Left"
                VerticalAlignment = "Top"
                Background = "#ADD8E6"
                Click = "btnZapis_Click" />

    </Grid>
    
</Window>

    
    
    
    
    
    